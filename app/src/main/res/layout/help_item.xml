<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help_item_text"
        android:drawableLeft="@drawable/ic_help"
        android:drawableStart="@drawable/ic_help"
        android:drawablePadding="@dimen/padding_left_right"
        android:text="@string/help_title"
        android:textStyle="bold"
        android:textSize="@dimen/padding_left_right"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingLeft="@dimen/padding_left_right"
        android:paddingRight="@dimen/padding_left_right"
        android:paddingTop="@dimen/padding_help_top_bottom"
        android:paddingBottom="@dimen/padding_help_top_bottom"/>

</LinearLayout>