<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".src.main.java.com.view.SplashActivity">

        <TextView
            android:id="@+id/splash_text"
            android:textStyle="bold|italic"
            android:textSize="55dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="@dimen/location_button_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:text="@string/app_name_splash"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_left_right"
            android:layout_marginRight="@dimen/padding_left_right"
            android:layout_marginBottom="@dimen/contact_margin_top"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/splash_screen_image"/>

    </LinearLayout>


