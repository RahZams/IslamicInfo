<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zikr"
        android:id="@+id/zikr_item_title"
        android:layout_marginTop="@dimen/padding_top_bottom"
        android:layout_marginStart="@dimen/padding_left_right"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/urdu_dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_bottom"
        android:layout_marginEnd="@dimen/padding_left_right"
        android:fontFamily="@font/amiri"
        android:text="@string/zikr"
        android:textDirection="rtl"
        android:textSize="20dp" />

</LinearLayout>